<!-- list_complex.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="12dp" >

    <ImageView
        android:id="@+id/nb_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_equipes_mini"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/nb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@array/birds"
        android:layout_toLeftOf="@+id/nb_img"
        android:text="3"
        tools:ignore="HardcodedText" />
    
    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_star_enabled"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title_court"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_toLeftOf="@id/nb"
        android:layout_toRightOf="@id/favorite"
        android:text="Vailhauquès"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />
  
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_court"
        android:layout_below="@+id/title_court"
        android:text="Foyer rural de Vailhauquès"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />


</RelativeLayout>
